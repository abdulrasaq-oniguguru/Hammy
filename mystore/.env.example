# =============================================================
# ENVIRONMENT VARIABLES FOR mystore POS
# =============================================================
# SETUP: Copy this file to .env and fill in your values
#        cp .env.example .env
#
# .env is NOT committed to git — it stays on each local system.
# =============================================================

# ---- Django Core ----
DJANGO_SECRET_KEY=your-random-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ---- Database ----
# Choose ONE engine for your system:
#   PostgreSQL : django.db.backends.postgresql
#   MySQL      : django.db.backends.mysql
#   SQLite     : django.db.backends.sqlite3
#   MS SQL     : mssql
DB_ENGINE=django.db.backends.postgresql
DB_NAME=Store
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# MS SQL only (leave blank for other engines)
# DB_DRIVER=ODBC Driver 17 for SQL Server

# ---- Email (optional — for daily reports) ----
DAILY_REPORT_EMAIL=your_email@example.com
DAILY_REPORT_CC_EMAILS=
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=your_email@example.com

# ---- Celery / Redis ----
REDIS_URL=redis://localhost:6379/0

# ---- Static / Media Paths (optional overrides) ----
# STATIC_ROOT=/path/to/static_root
# MEDIA_ROOT=/path/to/media
